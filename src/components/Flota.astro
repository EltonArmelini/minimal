---
/*
  Componente Flota.astro con su propio array y map()
  Ubica fotos en: public/img/flota/<archivo>.jpg
*/
const flota = [
  { modelo: "Toyota Corolla", tipo: "Sedán", cover: "/img/flota/corolla.jpg", desc: "Cómodo y seguro para viajes familiares." },
  { modelo: "Hilux 4x4", tipo: "Pickup", cover: "/img/flota/hilux.jpg", desc: "Ideal para excursiones y terreno difícil." },
  { modelo: "Mercedes Sprinter", tipo: "Van", cover: "/img/flota/sprinter.jpg", desc: "Capacidad hasta 15 pasajeros con aire acondicionado." },
];
---
<section id="flota" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12 bg-slate-50">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-2xl font-extrabold text-slate-900">Nuestra Flota</h3>
    <p class="text-sm text-slate-600">Vehículos disponibles para traslados y excursiones.</p>
  </div>

  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {flota.map((v) => (
      <article class="rounded-2xl overflow-hidden bg-white border border-slate-200 shadow-sm hover:shadow-lg transition transform hover:scale-[1.02]">
        <div class="h-44 w-full bg-slate-200 overflow-hidden">
          <img src={v.cover} alt={v.modelo} class="h-full w-full object-cover" loading="lazy" />
        </div>
        <div class="p-4">
          <h4 class="text-lg font-bold text-slate-900">{v.modelo}</h4>
          <p class="text-sm text-slate-600">{v.tipo} — {v.desc}</p>
        </div>
      </article>
    ))}
  </div>
</section>
